<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pink">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="值得逛"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/hsv_zdg"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <RadioButton
                android:id="@+id/boutique_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="精选"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:checked="true"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/nvzhuang_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="女装"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/nanzhuang_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="男装"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/jujia_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="居家"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/muyin_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="母婴"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/xiebao_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="鞋包"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/peishi_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="配饰"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/meishi_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="美食"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/shuma_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="数码"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/meizhuang_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="美妆"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/wenti_zdg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="文体"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/syg_fragment_text_color"
                android:button="@null"/>
        </RadioGroup>
    </HorizontalScrollView>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/zdg_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_hint_zdg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拼命加载中.."
                android:textSize="20sp"
                android:gravity="center"
                android:visibility="gone"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_zdg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>