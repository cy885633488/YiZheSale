<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/pink">
        <ImageView
            android:id="@+id/iv_setting_pc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_setup"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btn_login_pc"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="立即登录"
            android:textColor="@color/pink"
            android:background="@drawable/person_center_login_bg"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_border_orange2_shpe"
            android:text="帅哥"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_login_pc"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/usericon_order"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_deep"
            android:text="去淘宝查看订单"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/usericon_address"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_deep"
            android:text="去淘宝查看物流信息"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/usericon_shoppingcart"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_deep"
            android:text="去淘宝查看我的购物车"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/usericon_collects"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_deep"
            android:text="去淘宝查看我的收藏夹"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/usericon_sign"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv"
            android:layout_toRightOf="@id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_deep"
            android:text="签到领积分"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_toRightOf="@id/tv"
            android:layout_alignTop="@id/tv"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:src="@drawable/usericon_new"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/usericon_integral"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/iv5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_deep"
            android:text="我的积分"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/usericon_mall"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/iv6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_deep"
            android:text="积分商城"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>